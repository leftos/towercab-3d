{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TowerCab 3D",
  "version": "0.0.10-alpha",
  "identifier": "com.towercab.viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "TowerCab 3D",
        "width": 1600,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: http://asset.localhost https://asset.localhost; script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost https://asset.localhost data: blob: http: https:; connect-src 'self' asset: http://asset.localhost https://asset.localhost http: https: wss:; worker-src 'self' blob:",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**/*"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": [
      "resources/fsltl_converter.exe",
      "resources/texconv.exe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "displayLanguageSelector": false,
        "template": "installer.nsi.template"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
