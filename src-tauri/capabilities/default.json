{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$RESOURCE/**"
      ]
    },
    "window-state:allow-restore-state",
    "window-state:allow-save-window-state"
  ]
}
